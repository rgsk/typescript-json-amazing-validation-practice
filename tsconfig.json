{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "plugins": [
      {
        "transform": "typescript-json/lib/transform"
      }
    ]
  },
  "include": ["src/**/*.ts", "typings"]
}
